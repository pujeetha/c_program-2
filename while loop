#include<stdio.h>
int main()
{
    int n,s=0,t;
    printf("enter the value of n:");
    scanf("%d",&n);
    t=n;
    while(t>0)
    {
        s+=t%10;
        t/=10;
    }
    if(n%s==0)
    {
        printf("the given number is nivens number");
    }
    else
    {
        printf("the given number is not nivens number");
    }
return 0;
}
